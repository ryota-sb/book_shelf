<%= javascript_include_tag 'dropdown_menu' %>

<% if logged_in? %>
  <div class="overlay" id="js-overlay"></div>
  <div class="side-menu-btn" id="js-sideMenuBtn">
    <div class="ellipsis">
      <span class="point top"></span>
      <span class="point middle"></span>
      <span class="point bottom"></span>
    </div>
  </div>
  <nav class="side-menu">
    <ul>
      <li>
        <%= link_to user_path(current_user), method: :get do %>
          <i class="far fa-user"></i><%= "#{current_user.name} ( #{current_user.books.count}冊 )" %>
        <% end %>
      </li>
      <li>
        <%= link_to book_show_like_path(current_user), method: :get do %>
          <i class="far fa-heart"></i>お気に入り
        <% end %>
      </li>
      <li>
        <%= link_to users_path, method: :get do %>
          <i class="fas fa-users"></i>ユーザー一覧
        <% end %>
      </li>
      <li>
        <%= link_to logout_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>ログアウト
        <% end %>
      </li>
    </ul>
  </nav>
<% end %>