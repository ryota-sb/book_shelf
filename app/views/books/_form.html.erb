<%= form_for @book do |f| %>

  <div class="input-form">
    <%= f.text_field :title, placeholder: 'タイトル' %>
  </div>

  <div class="book-image">
    <%= f.label :image, '本の画像' %>
    <div class="image-field">
      <%= f.file_field :image %>
    </div>
  </div>
 

  <div class="text-form">
    <%= f.label :content, '内容' %>
    <%= f.text_area :content %>
  </div>

  <div class="form-button">
    <%= f.submit yield(:button_text) %>
  </div>

<% end %>