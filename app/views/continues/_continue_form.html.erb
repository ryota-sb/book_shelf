<div id="continue-form">
  <% if current_user?(user) %>
    <%= render partial: 'continues/continue', locals: { user: user } %>
    <% if  @continue && Time.zone.now.to_i - @continue.created_at.to_i > 10.second %>
      <%= link_to '削除', continue_path(user.id), method: :delete %>
    <% end %>
  <% end %>
</div>