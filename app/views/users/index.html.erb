<% provide(:title, 'ユーザー一覧') %>

<div class="all-user-page">
  <div class="all-user-page-title">
    <h1>ユーザーを探してみよう！</h1>
  </div>
    <div class="users">
      <% @users.each do |user| %>
        <% unless current_user?(user) %>
          <div class="users-image">
            <% if user.image? %>
              <%= image_tag user.image.url, size: '150x150' %>
            <% else %>
              <%= image_tag 'default_user.jpg', size: '150x150' %>
            <% end %>
          </div>
          <div class="users-name">
            <%= link_to user.name, user_path(user) %>
          </div>
        <% end %>
      <% end %>
    </div>
</div>