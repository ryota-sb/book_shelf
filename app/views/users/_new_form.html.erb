<%= form_for @user do |f| %>

  <div class="input-form">
    <%= f.text_field :name, placeholder: '名前入力' %>
    <%= f.text_field :email, placeholder: 'メールアドレス入力' %>
    <%= f.password_field :password, placeholder: 'パスワード(6文字以上)' %>
    <%= f.password_field :password_confirmation, placeholder: 'パスワード再入力' %>
  </div>

  <div class="user-image">
    <%= f.label :image, 'ユーザー画像' %></br>
    <div class="image-field">
      <%= f.file_field :image %>
    </div>
  </div>
 
  <div class="form-button">
    <%= f.submit '登録' %>
  </div>

<% end %>