<% provide(:title, @title) %>

<div class="follow-page">
  <div class="follow-page-title">
    <h1><%= @title %></h1>
  </div>
  <div class="follow-user-box">
    <% @users.each do |user| %>
      <div class="follow-user-info">
        <div class="follow-user">
          <div class="follow-user-name">
            <%= link_to user.name, user_path(user) %>
          </div>
          <div class="follow-user-image">
            <% if user.image? %>
              <%= link_to image_tag(user.image.url, size: '150x150'), user_path(user) %>
            <% else %>
              <%= link_to image_tag('default_user.jpg', size: '150x150'), user_path(user) %>
            <% end %>
          </div>
        </div>
        <div class="my-book">
          <% user.books.each do |book| %>
            <div class="follow-user-book-info">
              <div class="follow-user-book-title">
                <%= book.title %>
              </div>
              <% if book.image? %>
                <%= link_to image_tag(book.image.url, size: '110x160'), book_path(book.id) %>
               <% else %> 
                <%= link_to image_tag('default_book.jpg', size: '110x160'), book_path(book.id) %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>